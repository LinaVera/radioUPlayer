        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/space_margin">

            <ImageView
                android:layout_width="@dimen/w_image_programs"
                android:layout_height="@dimen/h_image_programs"
                android:src="@drawable/ciencia_somos"
                android:background="@drawable/card_programs_background"
                android:padding="@dimen/space_margin"/>
