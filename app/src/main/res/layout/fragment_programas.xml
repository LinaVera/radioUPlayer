            android:layout_margin="@dimen/space_margin">

            <ImageView
                android:layout_width="@dimen/w_image_programs"
                android:layout_height="@dimen/h_image_programs"
                android:src="@drawable/sanemos_juntos"
                android:background="@drawable/card_programs_background"
                android:padding="@dimen/space_margin"/>
